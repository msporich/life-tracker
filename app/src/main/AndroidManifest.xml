<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lifetracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LifeTracker">
        <activity
            android:name=".MoodEditing"
            android:exported="true" />
        <activity
            android:name=".MoodsListActivity"
            android:exported="true"/>
        <activity
            android:name=".WorkoutDetailActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".FitnessHomePageActivity"
            android:exported="true">

        </activity>
        <activity
            android:name=".GridRecyclerActivity"
            android:exported="false" />
        <activity
            android:name=".SettingsActivity" 
            android:exported="true"
            android:parentActivityName=".ModulesActivity" />
        <activity
            android:name=".CaloriesActivity"
            android:exported="true"
            android:parentActivityName=".ModulesActivity" />
        <activity
            android:name=".MoodActivity"
            android:exported="true"
            android:parentActivityName=".ModulesActivity" />
        <activity
            android:name=".FitnessActivity"
            android:exported="true"
            android:parentActivityName=".ModulesActivity" />
        <activity
            android:name=".SleepActivity"
            android:exported="true"
            android:parentActivityName=".ModulesActivity" />
        <activity
            android:name=".ModulesActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>